<h1>All articles </h1>

<%= link_to "Create new article", new_article_path %> 

<br/>
<br/>

<table>
	<thead>
		<th>Title</th>
		<th>Description</th>		
	</thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td><%= article.title %></td>
				<td><%= article.description %></td>	
				<td><%= link_to "Edit", edit_article_path(article) %></td>
				<td><%= link_to "Show", article_path(article) %></td>
			</tr>
		<% end %>		
	</tbody>
</table>